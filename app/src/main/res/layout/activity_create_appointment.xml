<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CreateAppointmentActivity"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/create_appointment_page_toolbar"
        layout="@layout/app_bar_layout"
        ></include>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/create_appointment_child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs1"
                android:text="Name"
                android:textStyle="bold"
                android:padding="6dp"
                android:paddingStart="20dp"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/create_appointment_child_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs1"
                android:text="Age"
                android:textStyle="bold"
                android:padding="6dp"
                android:paddingStart="20dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/inputs1"
                >
                <TextView
                    android:id="@+id/create_appointment_child_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    android:text="Gender"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/inputs1"
                >
                <TextView
                    android:id="@+id/create_appointment_bloodGrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Blood Grp "
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/create_appointment_assign_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs1"
                android:hint="Height in feets"
                android:padding="6dp"
                android:paddingStart="20dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/create_appointment_assign_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs1"
                android:hint="Weight in kg"
                android:padding="6dp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/inputs1"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/create_appointment_assign_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Hospital "
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <Button
                android:id="@+id/create_appointment_assign_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Date And Time"
                android:textStyle="bold|italic"
                android:background="@drawable/inputs1"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"
                />

            <Button
                android:id="@+id/create_appointment_assign_saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttons"
                android:text="Assign"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>